<p style="color: green"><%= notice %></p>

<h1>Coins</h1>
<table >
  <thead >
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>

    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym%></td>
      <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
      <td><%= link_to 'Mostrar', coin %></td>
      <td><%= link_to 'Editar', edit_coin_path(coin)  %></td>
      <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nova Moeda", new_coin_path %>
